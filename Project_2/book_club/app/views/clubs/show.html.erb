<div class = "club">
  <h1><%= @club.name %>
<% if current_user == @club.user %>
    <%= link_to "(Edit)", edit_club_path %></h1>
<% else %>
    </h1>
<% end %>
</div>
  <p> Start date: <%= @club.start_date %>
<hr>
  <div class = "rows">
    <div class = "meetings">
      <h2>Meetings </h2>
      <% @club.meetings.each do |meeting|%>
      <div class = "meeting_flex">
          <div class = "meeting_info">
              <h3> <%= link_to "Meeting on #{meeting.date}" , club_meeting_path(@club, meeting) %></h3>
              <p> Host: <%= meeting.host %> </p>
              <% meeting.books.each do |book| %>
              <p> Book: <%= book.title %> </p>
            </div>
            <div class = "book_photo">
              <%= image_tag book.photo_url %>
            </div>
        </div>
            <hr>
            <% end %>
          <% end %>

          <div class = "add">
            <%= link_to "Add Meeting", new_club_meeting_path(@club) %>
          </div>
        </div>
        <div class = "clearfix"></div>
        <h2>Members</h2>
        <div class = "members">

          <% @club.members.each do |member|%>
            <div class = "member_table">
              <img class = "member_photo" src = "<%= member.photo_url %> ">
              <%= link_to member.name, club_member_path(@club, member) %>
            </div>
          <% end %>
          </div>
        <div class = "add">
            <%= link_to "Add Members", new_club_member_path(@club) %>

      </div>
  </div>
