<div class = "club">
  <h1><%= @club.name %>
<% if current_user == @club.user %>
    <%= link_to "(Edit)", edit_club_path %></h1>
<% else %>
    </h1>
<% end %>
</div>
  <p> Start date: <%= @club.start_date %>
<hr>
  <div class = "rows">
    <div class = "meetings">
      <h2>Meetings </h2>
      <div class = "add">
        <%= link_to "Add Meeting", new_club_meeting_path(@club) %>
      </div>
      <hr class = "big_line">
      <% @club.meetings.each do |meeting|%>
        <h3> Meeting: <%= link_to meeting.id, club_meeting_path(@club, meeting) %></h3>
        <p> Date: <%= meeting.date %> </p>
        <p> Host: <%= meeting.host %> </p>
        <% meeting.books.each do |book| %>
          <p> Book: <%= book.title %> </p>
          <p> Author: <%= book.author %> </p>
          <p> Genre: <%= book.genre %> </p>
          <div class = "book_table">
            <div class = "book_photo">
              <%= image_tag book.photo_url %>
            </div>
            <div class = "book_description">
              <p><%= book.description %></p>
              <p><%= link_to "Read More", book.link %>
            </div>

            </div>
            <hr>
            <% end %>
          <% end %>
          </div>
        </div>
        <div class = "members">
          <h2>Members</h2>
          <div class = "add">
            <%= link_to "Add Members", new_club_member_path(@club) %>
          </div>

          <% @club.members.each do |member|%>
            <div class = "member_table">
              <img class = "member_photo" src = "<%= member.photo_url %> ">
              <%= link_to member.name, club_member_path(@club, member) %>
            </div>
              <hr>
          <% end %>

        </div>
    </div>
