<main>
  <h2>Edit Book</h2>

  <%= form_for [@meeting, @book] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :link %>
  <%= f.text_field :link %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

    <%= f.submit %>
  <% end %>

  <%= form_for [@club, @meeting], method: :delete do |f| %>
    <%= f.submit "Delete", class: "delete" %>
  <% end %>
</main>
